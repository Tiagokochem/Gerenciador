@model Plano
   
        <div class="col-sm-4 col-md-4 col-lg-6">
            <img src="@Model.ImagemUrl" class="card-img-top imageLanche" alt="@Model.PlanoNome" />
            <div class="figure-caption">
                <h4 class="formPullRightButton">@Model.Preco.ToString("c")</h4>
                <h4>
                    <a asp-controller="Plano" asp-action="Details" asp-route-planoId="@Model.PlanoId">@Model.PlanoNome</a>
                </h4>
                <h6>@Model.DescricaoCurta</h6>
            </div>
            <div text-right">
                <p class="formPullRightButton">
                    <a class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" 
                    asp-route-planoId="@Model.PlanoId">
                        Incluir no Carrinho
                    </a>
                </p>
            </div>
        </div>
