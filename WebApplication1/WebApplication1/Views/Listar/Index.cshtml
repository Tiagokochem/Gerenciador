@model List<ParceiroModel>

@{
    ViewData["Title"] = "Listagem de cadastros";
}

@*//colocar autorized
*@


<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">

        <a class="btn btn-primary" role="button" asp-controller="Listar" asp-action="Cadastrar">Adicionar novo Contato</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    <br />

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />

    <h1 class="display-4">Listagem de contatos</h1>

    <table id="table-parceiros" class="display" style="width:100%">

        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Fantasia</th>
                <th scope="col">Razão Social</th>
                <th scope="col">Nome do Responsável</th>
                <th scope="col">E-mail</th>
                <th scope="col">Cep</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
                <th scope="col">Telefone</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col">Data de Alteração</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ParceiroModel parceiro in Model)
                {
                    <tr>
                        <th scope="row">@parceiro.Id</th>
                        <td>@parceiro.ParceiroFantasia</td>
                        <td>@parceiro.ParceiroRazaoSocial</td>
                        <td>@parceiro.ParceiroNome</td>
                        <td>@parceiro.Email</td>
                        <td>@parceiro.ParceiroCep</td>
                        <td>@parceiro.ParceiroCidade</td>
                        <td>@parceiro.ParceiroEstado</td>
                        <td>@parceiro.ParceiroTelefone</td>
                        <td>@parceiro.DataDeCadastro</td>
                        <td>@parceiro.DataDeAlteracao</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" type="submit" asp-route-id="@parceiro.Id" asp-controller="Listar" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" type="submit" asp-route-id="@parceiro.Id" asp-controller="Listar" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            
            else
            {
            <tr class="odd"><td valign="top" colspan="5">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>
