@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação de exclusão do usuário";
}


<div class="text-center">
    <h3>Deseja realmente apagar o usuário (@Model.Nome)</h3>
    </div>
    
<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
